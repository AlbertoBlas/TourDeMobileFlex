<?xml version="1.0"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		title="{data.name}">

    <fx:Declarations>
        <s:RadioButtonGroup id="rbg"/>
    </fx:Declarations>
	
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>

    <s:RadioButton label="YES" groupName="rbg"/>
    <s:RadioButton label="NO" groupName="rbg"/>

    <s:Label text="You selected: {rbg.selectedValue}"/>

</s:View>