<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark">
	
	<fx:Script>
		import mx.events.FlexEvent;
		import spark.components.View;
		protected var swv:StageWebView;
	</fx:Script>
	
	<s:creationComplete>
		swv = new StageWebView();					
		swv.viewPort = new Rectangle(0, stage.height - height, width, height);
		swv.stage = stage;
		swv.loadURL("http://www.flex.org");
		
		(parent as View).addEventListener(FlexEvent.REMOVING, function(event:FlexEvent):void {
			swv.dispose();
		});
	</s:creationComplete>
	
</s:Group>