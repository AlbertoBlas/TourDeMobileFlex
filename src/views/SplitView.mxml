<?xml version="1.0" encoding="utf-8"?>
<s:SplitViewNavigator 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	width="100%" height="100%"
	autoHideFirstViewNavigator="true"
	resize="currentState = FlexGlobals.topLevelApplication.aspectRatio"
	creationComplete="creationCompleteHandler(event)">	
	<fx:Metadata>
		[Event(name="viewChanged", type="events.ViewNavigatorEvent")]
	</fx:Metadata>	
	<s:states>
		<s:State name="portrait" />
		<s:State name="landscape" />
	</s:states>	
	<fx:Script>
		<![CDATA[
			import events.ShowViewEvent;
			import events.ViewNavigatorEvent;
			
			import mx.events.FlexEvent;
			
			import spark.transitions.SlideViewTransition;
			import spark.transitions.SlideViewTransitionMode;
			import spark.transitions.ViewTransitionDirection;
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				this.addEventListener(ShowViewEvent.SHOW_VIEW, showView)
				viewNavigator.addEventListener("viewChangeComplete", viewChangeComplete, false, 0, true);					
			}
			
			protected function viewChangeComplete(event:Event):void
			{
				var viewActivateEvent:ViewNavigatorEvent = new ViewNavigatorEvent(ViewNavigatorEvent.VIEW_CHANGED, viewNavigator.activeView);
				dispatchEvent(viewActivateEvent);
			}
			
			protected function showView(event:ShowViewEvent):void
			{
				if (viewNavigator.length>0)
					viewNavigator.popAll();
				
				viewNavigator.pushView(event.view, event.data);
			}
			
		]]>
	</fx:Script>
	<s:ViewNavigator  id="categoryNavigator" width="350"  height="100%"  
					  firstView="views.TabbedView"
					  firstViewData="{Categories.topLevel}"/>
	<s:ViewNavigator id="viewNavigator" width="100%" height="100%"  >
		<s:navigationContent.portrait>
			<s:Button id="navigatorButton" label="Categories" 
					  click="showFirstViewNavigatorInPopUp(navigatorButton)" />
		</s:navigationContent.portrait>      
	</s:ViewNavigator>
	<fx:Script>
		import mx.core.FlexGlobals;
	</fx:Script>
</s:SplitViewNavigator>